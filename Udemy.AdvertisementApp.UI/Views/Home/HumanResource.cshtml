@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}
<div class="dummy mt-5"></div>

<div class="container my-3">
    <div class="accordion accordion-flush" id="accordionFlushExample">
        @for (int i = 0; i < Model?.Count; i++)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-heading-@Model[i].Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@Model[i].Id" aria-expanded="@(i == 0)" aria-controls="flush-collapse-@Model[i].Id">
                        @Model[i].Title
                    </button>
                </h2>
                <div id="flush-collapse-@Model[i].Id" class="accordion-collapse collapse @(i == 0 ?"show":"")" aria-labelledby="flush-heading-@Model[i].Id" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        @Model[i].Description
                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="#">Başvur</a>
                            }
                            else
                            {
                             <div class="alert alert-light text-center">Başvuru yapmak için önce kayıt ol.</div> <a href="#">Kayıt Ol</a>
                            }

                        </div>

                    </div>
                </div>
            </div>
        }

    </div>
</div>

